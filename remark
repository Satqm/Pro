        // ==================== INDEXEDDB FUNCTIONS ====================
        class IndexedDBStorage {
            // Initialize the database
            static async init() {
                return new Promise((resolve, reject) => {
                    const request = indexedDB.open(DB_NAME, DB_VERSION);
                    
                    request.onerror = (event) => {
                        console.error('IndexedDB error:', event.target.error);
                        reject(event.target.error);
                    };
                    
                    request.onsuccess = (event) => {
                        db = event.target.result;
                        console.log('IndexedDB initialized successfully');
                        resolve(db);
                    };
                    
                    request.onupgradeneeded = (event) => {
                        const db = event.target.result;
                        const oldVersion = event.oldVersion;
                        
                        // Create object stores if they don't exist
                                               const stores = [
                            'user', 'progress', 'targets', 'completedTargets', 
                            'studyPlan', 'videos', 'resources', 'stats', 
                            'settings', 'motivation', 'migration'
                        ];
                        
                        stores.forEach(storeName => {
                            if (!db.objectStoreNames.contains(storeName)) {
                                db.createObjectStore(storeName, { keyPath: 'id' });
                            }
                        });
                        
                        // Migrate from localStorage if this is first time
                        if (oldVersion === 0) {
                            IndexedDBStorage.migrateFromLocalStorage();
                        }
                    };
                });
            }
            
            // Migrate data from localStorage to IndexedDB
            static async migrateFromLocalStorage() {
                console.log('Migrating from localStorage...');
                
                const migrationData = {
                    id: 'migration',
                    migrated: true,
                    date: new Date().toISOString()
                };
                
                // Check if we already migrated
                const existingMigration = await IndexedDBStorage.get('migration', 'migration');
                if (existingMigration) {
                    console.log('Migration already completed');
                    return;
                }
                
                // Migrate each localStorage key
                const localStorageKeys = [
                    'ca_pro_user',
                    'ca_pro_progress',
                    'ca_pro_targets',
                    'ca_pro_completedTargets',
                    'ca_pro_studyPlan',
                    'ca_pro_videos',
                    'ca_pro_resources',
                    'ca_pro_stats',
                    'ca_pro_currentPage',
                    'ca_pro_isLoggedIn'
                ];
                
                for (const key of localStorageKeys) {
                    const data = localStorage.getItem(key);
                    if (data) {
                        try {
                            const parsedData = JSON.parse(data);
                            const storeName = key.replace('ca_pro_', '');
                            await IndexedDBStorage.set(storeName, {
                                id: storeName,
                                data: parsedData
                            });
                            console.log(`Migrated ${key} to IndexedDB`);
                        } catch (error) {
                            console.error(`Error migrating ${key}:`, error);
                        }
                    }
                }
                
                // Save migration record
                await IndexedDBStorage.set('migration', migrationData);
                console.log('Migration completed successfully');
            }
            
            // Generic get function
            static async get(storeName, id) {
                return new Promise((resolve, reject) => {
                    if (!db) {
                        reject(new Error('Database not initialized'));
                        return;
                    }
                    
                    const transaction = db.transaction([storeName], 'readonly');
                    const store = transaction.objectStore(storeName);
                    const request = store.get(id);
                    
                    request.onsuccess = () => resolve(request.result?.data || null);
                    request.onerror = () => reject(request.error);
                });
            }
            
            // Generic set function
            static async set(storeName, data) {
                return new Promise((resolve, reject) => {
                    if (!db) {
                        reject(new Error('Database not initialized'));
                        return;
                    }
                    
                    const transaction = db.transaction([storeName], 'readwrite');
                    const store = transaction.objectStore(storeName);
                    const request = store.put(data);
                    
                    request.onsuccess = () => resolve();
                    request.onerror = () => reject(request.error);
                });
            }
            
            // Generic delete function
            static async delete(storeName, id) {
                return new Promise((resolve, reject) => {
                    if (!db) {
                        reject(new Error('Database not initialized'));
                        return;
                    }
                    
                    const transaction = db.transaction([storeName], 'readwrite');
                    const store = transaction.objectStore(storeName);
                    const request = store.delete(id);
                    
                    request.onsuccess = () => resolve();
                    request.onerror = () => reject(request.error);
                });
            }
            
              // Get all items from a store
static async getAll(storeName) {
    return new Promise((resolve, reject) => {
        if (!db) {
            reject(new Error('Database not initialized'));
            return;
        }
        
        const transaction = db.transaction([storeName], 'readonly');
        const store = transaction.objectStore(storeName);
        const request = store.getAll();
        
        request.onsuccess = () => {
            const items = request.result || [];
            // Extract data field from each item
            const result = items.map(item => {
                // For array stores, return the data field
                // For single object stores, also return the data field
                return item.data || item;
            });
            resolve(result);
        };
        request.onerror = () => reject(request.error);
    });
}
            
            // Clear a store
            static async clear(storeName) {
                return new Promise((resolve, reject) => {
                    if (!db) {
                        reject(new Error('Database not initialized'));
                        return;
                    }
                    
                    const transaction = db.transaction([storeName], 'readwrite');
                    const store = transaction.objectStore(storeName);
                    const request = store.clear();
                    
                    request.onsuccess = () => resolve();
                    request.onerror = () => reject(request.error);
                });
            }
            
            // Export all data
   static async exportAll() {
    const singleObjectStores = ['user', 'progress', 'studyPlan', 'stats', 'settings', 'motivation'];
    const arrayStores = ['targets', 'completedTargets', 'videos', 'resources'];
    const allStores = [...singleObjectStores, ...arrayStores];
    
    const allData = {};
    
    for (const storeName of allStores) {
        if (singleObjectStores.includes(storeName)) {
            // Single object store - get single item
            const data = await IndexedDBStorage.get(storeName, storeName);
            if (data) {
                allData[storeName] = [data]; // Wrap in array for compatibility
            }
        } else {
            // Array store - get all items
            const data = await IndexedDBStorage.getAll(storeName);
            if (data && data.length > 0) {
                allData[storeName] = data;
            }
        }
    }
    
    allData.exportDate = new Date().toISOString();
    allData.version = '2.0';
    allData.app = 'CA Final Pro Tracker';
    
    return JSON.stringify(allData, null, 2);
}
            
            // Import all data
static async importAll(jsonData) {
    try {
        const data = JSON.parse(jsonData);
        
        // Define store types
        const singleObjectStores = ['user', 'progress', 'studyPlan', 'stats', 'settings', 'motivation'];
        const arrayStores = ['targets', 'completedTargets', 'videos', 'resources'];
        const allStores = [...singleObjectStores, ...arrayStores];
        
        // Clear existing data first
        for (const storeName of allStores) {
            await IndexedDBStorage.clear(storeName);
        }
        
        // Import new data
        for (const storeName of allStores) {
            if (data[storeName]) {
                if (singleObjectStores.includes(storeName)) {
                    // Single object store
                    if (Array.isArray(data[storeName]) && data[storeName].length > 0) {
                        // Take first item from array (backward compatibility)
                        await IndexedDBStorage.set(storeName, {
                            id: storeName,
                            data: data[storeName][0]
                        });
                    } else if (typeof data[storeName] === 'object') {
                        // Direct object
                        await IndexedDBStorage.set(storeName, {
                            id: storeName,
                            data: data[storeName]
                        });
                    }
                } else if (arrayStores.includes(storeName)) {
                    // Array store - save each item with unique ID
                    if (Array.isArray(data[storeName])) {
                        for (let i = 0; i < data[storeName].length; i++) {
                            const item = data[storeName][i];
                            // Use existing ID or create a unique one
                            const id = item.id || `${storeName}_${i}_${Date.now()}`;
                            await IndexedDBStorage.set(storeName, {
                                id: id,
                                data: item
                            });
                        }
                    }
                }
            }
        }
        
        return { success: true, message: 'Data imported successfully' };
    } catch (error) {
        console.error('Import error:', error);
        return { 
            success: false, 
            error: 'Invalid backup file format or corrupted data' 
        };
    }
}
}


        // ==================== DATA STORAGE SYSTEM ====================
        class DataStorage {
            // Initialize IndexedDB
            static async init() {
                try {
                    await IndexedDBStorage.init();
                    return true;
                } catch (error) {
                    console.error('Failed to initialize IndexedDB:', error);
                    return false;
                }
            }
            
            // Load user data from IndexedDB
            static async loadUserData() {
                try {
                                    const [
                        user, progress, targets, completedTargets,
                        studyPlan, videos, resources, stats,
                   motivation
   ] = await Promise.all([
    IndexedDBStorage.get('user', 'user'),
    IndexedDBStorage.get('progress', 'progress'),
    IndexedDBStorage.getAll('targets'),
    IndexedDBStorage.getAll('completedTargets'),
    IndexedDBStorage.get('studyPlan', 'studyPlan'),
    IndexedDBStorage.getAll('videos'),
    IndexedDBStorage.getAll('resources'),
    IndexedDBStorage.get('stats', 'stats'),
    IndexedDBStorage.get('motivation', 'motivation')
           ]);
                    
                                   return {
                        user: user || initializeUser(),
                        progress: progress || initializeProgress(),
                        targets: targets || [],
                        completedTargets: completedTargets || [],
                        studyPlan: studyPlan || initializeStudyPlan(),
                        videos: videos || [],
                        resources: resources || [],
                        stats: stats || initializeStats(),
                        motivation: motivation || initializeMotivation()
                    };
                } catch (error) {
                    console.error('Error loading user data:', error);
                                     return {
                        user: initializeUser(),
                        progress: initializeProgress(),
                        targets: [],
                        completedTargets: [],
                        studyPlan: initializeStudyPlan(),
                        videos: [],
                        resources: [],
                        stats: initializeStats(),
                        motivation: initializeMotivation()
                    };
                }
            }
            
               // Save specific data
static async save(storeName, data) {
    try {
        const singleObjectStores = ['user', 'progress', 'studyPlan', 'stats', 'settings', 'motivation'];
        const arrayStores = ['targets', 'completedTargets', 'videos', 'resources'];
        
        if (arrayStores.includes(storeName)) {
            // Array store - clear and save all items with IDs
            await IndexedDBStorage.clear(storeName);
            if (Array.isArray(data)) {
                for (let i = 0; i < data.length; i++) {
                    const item = data[i];
                    // Preserve existing ID or create new one
                    const id = item.id || `${storeName}_${i}_${Date.now()}`;
                    await IndexedDBStorage.set(storeName, {
                        id: id,
                        data: item
                    });
                }
            }
        } else if (singleObjectStores.includes(storeName)) {
            // Single object store
            await IndexedDBStorage.set(storeName, {
                id: storeName,
                data: data
            });
        }
        return true;
    } catch (error) {
        console.error(`Error saving ${storeName}:`, error);
        return false;
    }
}
            
            // Auto-save with debounce
            static async autoSave(storeName, data) {
                // Clear existing timer
                if (autoSaveTimer) {
                    clearTimeout(autoSaveTimer);
                }
                
                // Set pending save flag
                pendingSave = true;
                updateAutoSaveIndicator('saving');
                
                // Set new timer
                autoSaveTimer = setTimeout(async () => {
                    if (pendingSave && !isSaving) {
                        isSaving = true;
                        try {
                            await DataStorage.save(storeName, data);
                            pendingSave = false;
                            updateAutoSaveIndicator('saved');
                            
                            // Show success toast for important saves
                            if (storeName === 'progress') {
                                showToast('Progress auto-saved', 'success');
                            }
                        } catch (error) {
                            console.error('Auto-save error:', error);
                            updateAutoSaveIndicator('error');
                            showToast('Auto-save failed', 'error');
                        } finally {
                            isSaving = false;
                        }
                    }
                }, AUTO_SAVE_DELAY);
            }
            
            // Manual save with visual feedback
            static async manualSave(storeName, data, callback) {
                if (isSaving) {
                    showToast('Already saving, please wait...', 'warning');
                    return;
                }
                
                isSaving = true;
                const startTime = Date.now();
                
                try {
                    await DataStorage.save(storeName, data);
                    const elapsedTime = Date.now() - startTime;
                    
                    // Simulate minimum save time for better UX
                    if (elapsedTime < 500) {
                        await new Promise(resolve => setTimeout(resolve, 500 - elapsedTime));
                    }
                    
                    if (callback) callback(true);
                    showToast('Saved successfully!', 'success');
                } catch (error) {
                    console.error('Manual save error:', error);
                    if (callback) callback(false);
                    showToast('Save failed. Please try again.', 'error');
                } finally {
                    isSaving = false;
                }
            }
            
            // Clear all data
            static async clearAll() {
                const stores = [
                    'user', 'progress', 'targets', 'completedTargets',
                    'studyPlan', 'videos', 'resources', 'stats', 'settings'
                ];
                
                for (const storeName of stores) {
                    await IndexedDBStorage.clear(storeName);
                }
                
                // Clear localStorage migration flag
                localStorage.removeItem('ca_pro_migrated');
            }
            
            // Export all data
            static async exportAll() {
                return await IndexedDBStorage.exportAll();
            }
            
            // Import all data
            static async importAll(jsonData) {
                return await IndexedDBStorage.importAll(jsonData);
            }
        }


        // ==================== INITIALIZATION ====================
        document.addEventListener('DOMContentLoaded', async function() {
            // Initialize IndexedDB
            const dbInitialized = await DataStorage.init();
            if (!dbInitialized) {
                showToast('Failed to initialize database. Some features may not work.', 'error');
            }
            
            // Set today's date in start date input
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('start-date').value = today;
            document.getElementById('target-date').value = today;
            
            // Check if user is already logged in
            const userData = await DataStorage.loadUserData();
            const savedUser = userData.user;
            
            if (savedUser && savedUser.name) {
                // User is logged in, skip welcome screen
                currentUser = savedUser;
                userProgress = userData.progress;
                userTargets = userData.targets;
                completedTargets = userData.completedTargets;
                userStudyPlan = userData.studyPlan;
                 userVideos = userData.videos;
                userResources = userData.resources;
                userStats = userData.stats;
                userMotivation = userData.motivation;
                loadApp();
            } else {
                // Show welcome screen
                document.getElementById('welcome-container').style.display = 'flex';
                document.getElementById('app-container').style.display = 'none';
            }
            
            // Initialize app
            setupEventListeners();
            if (savedUser && savedUser.name) {
                loadDefaultContent();
                updateUserUI();
            }
        });
        
        function loadApp() {
            // Hide welcome, show app
            document.getElementById('welcome-container').style.display = 'none';
            document.getElementById('app-container').style.display = 'block';
            
            // Update UI
            updateUserUI();
            
            // Load default content
            loadDefaultContent();
            
            // Navigate to dashboard
            navigateToPage('dashboard');
            
            // Update dashboard
            updateDashboard();
        }
        
